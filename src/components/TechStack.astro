---

<section class="stack-section">
  <div class="container">
    <div class="section-header reveal">
      <p class="section-label">{t.label}</p>
      <h2 class="section-title">{t.title}</h2>
    </div>

    <div class="stack-grid">
      {stack.map((item, i) => (
        <div class={`stack-card reveal reveal-delay-${(i % 4) + 1}`}>
          <svg class="stack-logo" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" set:html={item.logo}></svg>
          <h4>{item.name}</h4>
          <p>{item.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
