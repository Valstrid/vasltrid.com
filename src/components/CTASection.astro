---
interface Props {
  lang?: 'en' | 'ar';
}

const { lang = 'en' } = Astro.props;
const isArabic = lang === 'ar';

const t = {
  en: {
    title: 'Have a project in mind?<br>Let\'s talk scope.',
    description: 'Whether you need a full site build, a Webflow migration, or a design refresh — we\'ll scope it out in a free 30-minute strategy call.',
    cta: 'Book a call'
  },
  ar: {
    title: 'لديك مشروع في ذهنك؟<br>دعنا نتحدث عن النطاق.',
    description: 'سواء كنت تحتاج بناء موقع كامل أو ترحيل إلى ويب فلو أو تحديث التصميم — سنحدد النطاق في مكالمة استراتيجية مجانية لمدة 30 دقيقة.',
    cta: 'احجز مكالمة'
  }
}[lang];
---

<section class="cta-section">
  <div class="container">
    <div class="cta-card reveal">
      <div class="cta-content">
        <h2 set:html={t.title}></h2>
        <p>{t.description}</p>
        <div>
          <a href="mailto:hi@hisonrisa.com" class="btn-primary">
            {t.cta}
            <svg class="btn-icon" viewBox="0 0 16 16" fill="none">
              <path d="M3.33 8h9.34M8.67 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
      <div class="cta-visual">
        <div class="browser-mockup">
          <div class="browser-topbar">
            <div class="browser-dots">
              <span></span><span></span><span></span>
            </div>
            <div class="browser-url">
              <div class="browser-url-text">valstrid.com</div>
            </div>
          </div>
          <div class="browser-body">
            <div class="browser-nav-skeleton">
              <div class="skel skel-logo"></div>
              <div class="skel-nav-links">
                <div class="skel skel-link"></div>
                <div class="skel skel-link"></div>
                <div class="skel skel-link"></div>
              </div>
            </div>
            <div class="browser-hero-skeleton">
              <div class="skel skel-badge"></div>
              <div class="skel skel-heading"></div>
              <div class="skel skel-heading short"></div>
              <div class="skel skel-paragraph"></div>
              <div class="skel skel-paragraph short"></div>
              <div class="skel-buttons">
                <div class="skel skel-btn"></div>
                <div class="skel skel-btn outline"></div>
              </div>
            </div>
            <div class="browser-cards-skeleton">
              <div class="skel skel-card"></div>
              <div class="skel skel-card"></div>
              <div class="skel skel-card"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

